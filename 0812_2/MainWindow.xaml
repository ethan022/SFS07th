<Window x:Class="_0812_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0812_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
         <!-- 색상 미리 보기 영역 -->
        <Border
                CornerRadius="10"
                BorderThickness="2"
                Height="200" 
                Grid.Row="1" 
                >
            <Grid x:Name="ColorPreview" Height="200" Background="White"/>
        </Border>
        
        <StackPanel Margin="10" Grid.Row="0">

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="R"/>
                <Slider x:Name="R" Grid.Column="1"
                        Minimum="0" Maximum="255"
                        Width="600"
                        ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="txtR" Grid.Column="2"
                         Text="{Binding ElementName=R, Path=Value, StringFormat=F0}"
                         Width="30" />
            </Grid>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="G"/>
                <Slider x:Name="G" Grid.Column="1"
                      Minimum="0" Maximum="255"
                      Width="600"
                      ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="txtG" Grid.Column="2"
                       Width="30" Text="{Binding ElementName=G, Path=Value, StringFormat=F0}" />
            </Grid>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="B"/>
                <Slider x:Name="B" Grid.Column="1"
                      Minimum="0" Maximum="255"
                      Width="600"
                      ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="txtB" Grid.Column="2"
                       Width="30" Text="{Binding ElementName=B, Path=Value, StringFormat=F0}" />
            </Grid>
            <GroupBox Header="Color Type">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <RadioButton x:Name="original"
                                 Margin="10"
                                 Content="Original"
                                 IsChecked="True" 
                                 Checked="Radio_Checked"
                                 />
                    <RadioButton x:Name="grayTone"
                                 Margin="10"
                                 Content="Gray Tone"
                                 Checked="Radio_Checked"
                    />
                    <RadioButton x:Name="invert"
                                 Margin="10"
                                 Content="Invert"
                                 Checked="Radio_Checked"
                    />
                    
                </StackPanel>
            </GroupBox>
            
        </StackPanel>
    </Grid>
</Window>
