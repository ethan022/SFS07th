<Window x:Class="_0812_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0812_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Image Grid.Column="0"
               x:Name="imgBox"
               Source="/Resources/img1.jpg"
               Width="300"
               Height="300"
               />
        <Button x:Name="btnImage" Content="이미지 변경"
                Grid.Column="1" Width="100" Height="100"
                Click="btnImage_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/img3.jpg"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
