<Window x:Class="_0818_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0818_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="ToDoList" FontSize="24"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="입력" FontSize="18" Margin="5"/>
            <TextBox Margin="5"/>
            <Button Content="추가" Height="30" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="목록" FontSize="18" Margin="5"/>
            <ListBox>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
                <ListBoxItem Content="할일"/>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
