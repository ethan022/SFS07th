<Window x:Class="_0818_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0818_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!-- 전역 스타일 정의 -->
    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <!-- 텍스트박스/콤보박스 기본 여백 -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 제목 -->
            <RowDefinition Height="Auto"/>
            <!-- 할 일 추가 -->
            <RowDefinition Height="Auto"/>
            <!-- 필터/전체 토글 -->
            <RowDefinition Height="*"/>
            <!-- 목록 -->
        </Grid.RowDefinitions>

        <!-- 앱 제목 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="ToDoList" FontSize="24" FontWeight="Bold"/>
        </StackPanel>

        <!-- 할 일 추가 영역 -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="할 일 추가" FontSize="18" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <!-- NewTitle 바인딩 -->
                <TextBox Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}" 
                         Width="300" Margin="5"/>
                <!-- AddCommand 바인딩 -->
                <Button Command="{Binding AddCommand}"
                        Style="{StaticResource FlatButton}"
                        Content="추가" Height="30" Width="100"/>
            </StackPanel>
        </StackPanel>

        <!-- 필터 / 전체 토글 / 완료 삭제 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="필터" VerticalAlignment="Center" Margin="4"/>
            <ComboBox Width="140"/>
            <!-- 이 부분은 아직 ViewModel에 Command 없음 -->
            <Button Style="{StaticResource FlatButton}" Content="모두 토글"/>
            <Button Style="{StaticResource FlatButton}" Content="완료 삭제"/>
        </StackPanel>

        <!-- 할 일 목록 -->
        <StackPanel Grid.Row="3" Margin="10">
            <TextBlock Text="목록" FontSize="18" Margin="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <!-- Todos 바인딩 -->
                <ItemsControl ItemsSource="{Binding Todos}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- 각 TodoItem -->
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <!-- 삭제 버튼 -->
                                <Button Content="삭제" Margin="5"
                                        Command="{Binding DataContext.RemoveCommand,
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" />
                                <!-- 완료 여부 -->
                                <CheckBox IsChecked="{Binding IsCompleted}" VerticalAlignment="Center"/>
                                <!-- 제목 수정 가능 -->
                                <TextBox Text="{Binding Title}" Width="200" Margin="5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
